<script>
  var student_searching=new function(){
      var student_id, student_id_field=$('#search_with_id');
      student_id_field.keyup(function(){
          student_id=$(this).val();
          if(student_id!=''){
              $.ajax({
                  url: '<%= Rails.application.routes.url_helpers.student_search_admins_path %>',
                  data: {student_id: student_id},
                  type: 'get'
              });
          }
      });

  };
  var show_students_according_to_class=new function(){
      $('#select_level').change(function(){
          var class_id=$(this).val();
          if(class_id!=''){
              $.ajax({
                  url: '<%= Rails.application.routes.url_helpers.show_student_according_to_class_admins_path %>',
                  data: {class_id: class_id},
                  type: 'get'
              });
          }
      });
  };
  var student_info_show=new function(){
      $('#student_info_btn').click(function(){
          $.ajax({
              url: '<%= Rails.application.routes.url_helpers.student_count_admins_path %>',
              data: {},
              type: 'get'
          });
      });
  };


  var events=new function(){
      $('.searched_student_container').click(function(e){
          e.stopPropagation();
      })
      $(document).click(function(){
          $('.searched_student_container').hide();
      });
  };


</script>