<div class="content">
<div  class="row">
  <div  class="col-lg-8 portlets">
    <div  class="widget">
      <div class="widget-header">
        <h2><i class="fa fa-user"></i> <strong>Admission</strong> Form</h2>
        <div class="additional-btn">
          <a href="#" class="hidden reload"><i class="fa fa-repeat"></i></a>
          <a class="hidden" id="dropdownMenu1" data-toggle="dropdown">
            <i class="fa fa-cogs"></i>
          </a>
          <ul class="dropdown-menu pull-right" role="menu" aria-labelledby="dropdownMenu1">
            <li><a href="#">Action</a></li>
            <li><a href="#">Another action</a></li>
            <li><a href="#">Something else here</a></li>
            <li class="divider"></li>
            <li><a href="#">Separated link</a></li>
          </ul>
          <a href="#" class="widget-popout hidden tt" title="Pop Out/In"><i class="fa fa-chevron-up "></i></a>
          <a href="#" class="widget-maximize hidden"><i class="fa fa-arrows"></i></a>
          <a href="#" class="widget-toggle"><i class="fa fa-chevron-down"></i></a>
          <a href="#" class="widget-close"><i class="fa fa-close"></i></a>
        </div>
      </div>
      <div class="widget-content">
        <div class="row stacked">
          <div class="col-sm-12 portlets">

            <div class="widget">

              <div class="widget-content padding">
                <div id="basic-form">




                  <%= form_for Student.new, url: create_student_and_guardian_admins_path, method: :post do |f|   %>


                      <div class="form-group">
                        <label for="exampleInputPassword1">Please Select a Campus </label>
                        <%= select_tag 'select_campus', options_from_collection_for_select(Campus.all,:id, :name), { :class => 'form-control' } %>
                      </div>
                      <div class="form-group">
                        <label for="exampleInputEmail1">First Name </label>
                        <%= text_field_tag :student_first_name ,"", :class=> 'form-control', :placeholder=>"First Name" %>
                      </div>
                      <div class="form-group">
                        <label for="exampleInputEmail1">Last Name</label>
                        <%= text_field_tag :student_last_name ,"", :class=> 'form-control', :placeholder=>"Last Name" %>
                      </div>
                      <div class="form-group">
                        <label for="exampleInputEmail1">Student Contact Number</label>
                        <%= text_field_tag :student_contact_number ,"", :class=> 'form-control', :placeholder=>"Student Contact Number" %>
                      </div>
                      <div class="form-group">
                        <label for="exampleInputEmail1">Father's Name</label>
                        <%= f.text_field :father_name , class: 'form-control', :placeholder=>"Father's name" %>
                      </div>
                      <div class="form-group">
                        <label for="exampleInputEmail1">Mother's Name</label>
                        <%= f.text_field :mother_name , class: 'form-control', :placeholder=>"Mother's name" %>
                      </div>
                      <div class="form-group">
                        <label for="exampleInputEmail1">Local Guardian name</label>
                        <%= f.text_field :local_guardian , class: 'form-control', :placeholder=>"Local Guardian name" %>
                      </div>
                      <div class="form-group">
                        <label for="exampleInputEmail1">Guardian Contact Number</label>
                        <%= text_field_tag :guardian_contact_number ,"", :class=> 'form-control', :placeholder=>"Guardian Contact Number" %>
                      </div>
                      <div class="form-group">
                        <label for="exampleInputEmail1">Relation with Guardian</label>
                        <%= f.text_field :relationship_with_guardian , class: 'form-control', :placeholder=>"Relation with Guardian" %>
                      </div>
                      <div class="form-group">
                        <label class="col-sm-2 control-label">Gender</label>
                        <div class="col-sm-10">
                          <div class="radio iradio">
                            <label>
                              <%= f.radio_button :gender,"male", :checked=> true %>
                              Male
                            </label>
                          </div>
                          <div class="radio iradio">
                            <label>
                              <%= f.radio_button :gender,"female" %>
                              Female
                            </label>
                          </div>
                        </div>
                      </div>

                      <div class="form-group">
                        <label for="exampleInputPassword1">Class</label>
                        <%= select_tag 'select_level', options_from_collection_for_select(Level.all,:id, :name), {:prompt => 'Select Class', :class => 'form-control' } %>
                      </div>
                      <div class="form-group">
                        <label for="exampleInputPassword1">Year</label>
                        <%= select_tag 'select_year', options_from_collection_for_select([],:id, :name), {:prompt => 'Select Year', :class => 'form-control' } %>
                      </div>
                      <div class="form-group">
                        <label for="exampleInputPassword1">Semester</label>
                        <%= select_tag 'select_semester', options_from_collection_for_select([],:id, :name), {:prompt => 'Select Semester', :class => 'form-control' } %>
                      </div>
                      <div class="form-group">
                        <label for="exampleInputPassword1">Shift</label>
                        <%= select_tag 'select_shift', options_from_collection_for_select([],:id, :name), {:prompt => 'Select Shift', :class => 'form-control' } %>
                      </div>

                      <div class="form-group">
                        <label for="exampleInputPassword1">Password</label>
                        <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
                      </div>
                      <div class="form-group">
                        <label for="exampleInputPassword1">Profile Photo</label>
                        <%= f.file_field :profilepic , :class=> 'btn btn-default', :title=>"Search for a image to add" %>
                        <!--<input type="file" class="btn btn-default" title="Search for a file to add">-->
                        <!--<p class="help-block">Example block-level help text here.</p>-->
                      </div>
                      <div class="form-group">
                        <label for="exampleInputPassword1">Cover Photo</label>
                        <%= f.file_field :coverpic , :class=> 'btn btn-default', :title=>"Search for a image to add" %>
                        <!--<input type="file" class="btn btn-default" title="Search for a file to add">-->
                        <!--<p class="help-block">Example block-level help text here.</p>-->
                      </div>
                      <!--<button type="submit" class="btn btn-default">Submit</button>-->
                      <%= f.submit "Submit", :class=>"btn btn-default"%>
                  <% end %>

                </div>
              </div>
            </div>

          </div>


        </div>

      </div>
    </div>
  </div>
</div>
</div>
<script src="/js/jquery-1.11.1.min.js"></script>
<script>
  var admission_dropdown=new function(){
      this.class_select=new function(){
          var select_class_dropdown=$('#select_level');
          select_class_dropdown.click(function(){
              var level_id=select_class_dropdown.val();
              if(level_id){
                  $.ajax({
                      url: "<%= url_for year_load_admins_path %>",
                      data: {level_id: level_id},
                      type: 'get'
                  });
              }
          });
      };
      this.Year_select=new function(){
          var select_year_dropdown=$('#select_year');
          select_year_dropdown.click(function(){
              var year_id=select_year_dropdown.val();
              if(year_id){
                  $.ajax({
                      url: "<%= url_for semester_load_admins_path %>",
                      data: {year_id: year_id},
                      type: 'get'
                  });
              }
          });

      };
      this.semester_select=new function(){
          var select_semester_dropdown=$('#select_semester');
          select_semester_dropdown.click(function(){
              var semester_id=select_semester_dropdown.val();
              if(semester_id){
                  $.ajax({
                      url: "<%= url_for shift_load_admins_path %>",
                      data: {semester_id: semester_id},
                      type: 'get'
                  });
              }
          });

      };
  };
</script>