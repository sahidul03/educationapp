    <div class="form-group">
      <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
      <label class="control-label visible-ie8 visible-ie9">Username</label>
      <div class="input-icon">
        <i class="fa fa-user"></i>
        <%= f.text_field :user_name, autocomplete: "off", placeholder: 'Username', class: 'form-control placeholder-no-fix'%>
      </div>
    </div>
    <div class="form-group">
      <label class="control-label visible-ie8 visible-ie9">Password</label>
      <div class="input-icon">
        <i class="fa fa-lock"></i>
        <%= f.password_field :password, autocomplete: "off", placeholder: 'Password', class: 'form-control placeholder-no-fix'%>
      </div>
    </div>
    <div class="form-actions">

        <% if devise_mapping.rememberable? -%>
        
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>

        <% end -%>


        <%= button_tag(type: 'submit', class: "btn blue pull-right") do %>
            <i class="fa  fa-arrow-circle-o-right"></i> Login
        <% end %>

    </div>


